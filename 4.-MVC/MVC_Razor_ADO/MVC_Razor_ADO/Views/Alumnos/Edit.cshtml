@using MVC_Razor_ADO.Models
@model Entity.Alumno
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{

    <div class="form-group row">
        @Html.Label("id", htmlAttributes: new { @class = "col-sm-3 col-form-label text-left" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label("Nombre", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Primer Apellido", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.primerApellido, new { htmlAttributes = new { @class = "form-control" } })

        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Segundo Apellido", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.segundoApellido, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Fecha de Nacimiento", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.fechaNacimiento, new { htmlAttributes = new { @Value = Model.fechaNacimiento.ToString("yyyy-MM-dd"), @class = "form-control", @type = "date" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("CURP", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.curp, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Correo", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Telefono", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Sueldo", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.EditorFor(model => model.sueldo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Estado", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">
            @Html.DropDownList("idEstadoOrigen", (SelectList)ViewBag.idEstado, htmlAttributes: new { @class = "form-control" })
            @*@Html.EditorFor(model => model.idEstadoOrigen, new { htmlAttributes = new { @class = "col-sm-3 col-form-label text-right" } })*@
        </div>
    </div>
    <div class="form-group row">
        @Html.Label("Estatus", htmlAttributes: new { @class = "col-sm-3 col-form-label text-right" })
        <div class="col-sm-9">

            @Html.DropDownList("idEstatus", new SelectList(((IEnumerable<Entity.EstatusAlumno>)ViewData["Estatus"]).ToList(), "id", "nombre", Model.idEstatus), htmlAttributes: new { @class = "form-control" })



            @*@Html.EditorFor(model => model.idEstadoOrigen, new { htmlAttributes = new { @class = "col-sm-3 col-form-label text-right" } })*@
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12 text-start">
            <br />
            <input type="Submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
}
<br />
@Html.ActionLink("Regresar al Index", "Regresar", "Alumnos", htmlAttributes: new { @class = "btn btn-grey btn-sm" })
