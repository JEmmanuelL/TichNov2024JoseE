@model IEnumerable<Entidades.Alumnos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@Html.ActionLink("Agregar", "Create", "Alumnos", htmlAttributes: new { @class = "btn btn-primary" })


@using (Html.BeginForm())
{

    <table border="0" style="border-collapse: separate; border-spacing: 10px; width: 100%;">
        <tr>
            <th>
                ID
            </th>
            <th>
                Nombre
            </th>
            <th>
                Primer Apellido
            </th>
            <th>
                Segundo Apellido
            </th>
            <th>
                Correo
            </th>
            <th>
                Telefono
            </th>
            <th>
                Estado
            </th>
            <th>
                Estatus
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.id)
                </td>
                <td>
                    @Html.DisplayFor(m => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(m => item.primerApellido)
                </td>
                <td>
                    @Html.DisplayFor(m => item.segundoApellido)
                </td>
                <td>
                    @Html.DisplayFor(m => item.correo)
                </td>
                <td>
                    @Html.DisplayFor(m => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Estados.nombre)
                </td>
                <td>
                    @Html.DisplayFor(m => item.EstatusAlumnos.Nombre)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { idAlumno = item.id }, htmlAttributes: new { @class = "btn btn-warning btn-sm" })
                    @*<input type="Submit" id="IdDetails" name="BtnDetails-@item.id" value="Details" class="btn btn-warning btn-sm" />*@
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Alumnos", new { idAlumno = item.id }, htmlAttributes: new { @class = "btn btn-success btn-sm" })

                    @*<input type="Submit" id="IdEdit" name="BtnEdit-@item.id" value="Edit" class="btn btn-success btn-sm" />*@
                </td>
                <td>
                    @Html.ActionLink("Eliminar", "Delete", "Alumnos", new { idAlumno = item.id }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })

                    @*<input type="Submit" id="IdDelete" name="BtnDelete-@item.id" value="Delete" class="btn btn-danger btn-sm" />*@
                </td>
            </tr>
        }
    </table>

}


